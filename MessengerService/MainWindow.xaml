<Window x:Class="MessengerService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerService"
        mc:Ignorable="d"
        Title="Login Messenger by Reduzer" 
        Height="450" 
        Width="300">
    <Grid>

        <Label Content="Name" 
               Margin="100,38,113,351"/>
       
        <Label Content="Password"
               Margin="98,202,84,183"/>

        <Button Margin="11,353,183,10">
            <Label 
                Content="Forgot Password"/>
        </Button>
        

        <Button
            Name="LoginButton"
            Margin="228,357,13,12"
            Click="LoginButton_Click">
            <Label Content="Login"/>
        </Button>
        
    </Grid>
</Window>
