<Page
    x:Class="Viewer.PageTypes.LiveChat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Viewer.PageTypes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LiveChat"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary Source="..\Components\MergedLiveChat.xaml" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="InputBox" Grid.Row="1" />

        <ListBox
            Name="ChatViewListBox"
            Foreground="White"
            Style="{DynamicResource ListBoxStyle1}" />


    </Grid>
</Page>
